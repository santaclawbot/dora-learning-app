# ===========================================
# Dora Learning App - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env with real credentials!

# ===========================================
# SECURITY - REQUIRED FOR PRODUCTION
# ===========================================

# JWT Secret - REQUIRED! Generate a strong random string
# Example: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_SECRET

# Parent account password hash (bcrypt)
# Generate with: node -e "console.log(require('bcryptjs').hashSync('your-password', 10))"
# The hash below is for 'CHANGE_ME_IN_PRODUCTION' - DO NOT USE IN PRODUCTION!
PARENT_PASSWORD_HASH=CHANGE_ME_GENERATE_BCRYPT_HASH

# ===========================================
# EXTERNAL API KEYS
# ===========================================

# ElevenLabs TTS API Key (optional - for voice features)
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# Anthropic API Key (optional - for Ask Dora fallback)
ANTHROPIC_API_KEY=

# OpenClaw Gateway (optional - for Ask Dora primary path)
OPENCLAW_GATEWAY_URL=
OPENCLAW_AGENT_ID=dora
OPENCLAW_TIMEOUT_MS=5000

# ===========================================
# TELEGRAM BOT (optional)
# ===========================================
TELEGRAM_TOKEN=
TELEGRAM_WEBHOOK_URL=

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=./data/dora.db

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
BACKEND_PORT=3001
BACKEND_URL=http://localhost:3001

# CORS - comma-separated list of allowed origins
# Leave empty or set to * for development only
CORS_ORIGINS=http://localhost:5173

# ===========================================
# FRONTEND
# ===========================================
FRONTEND_URL=http://localhost:5173
VITE_API_URL=http://localhost:3001

# Set to 'true' to show demo hint on login page (development only)
VITE_SHOW_DEMO_HINT=false
